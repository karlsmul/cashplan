rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Expenses - Nur eigene Ausgaben lesbar/schreibbar
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Fixed Costs - Nur eigene Fixkosten lesbar/schreibbar
    match /fixedCosts/{costId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Incomes - Nur eigene Einnahmen lesbar/schreibbar
    match /incomes/{incomeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Keyword Filters - Nur eigene Schlagworte lesbar/schreibbar
    match /keywordFilters/{filterId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // User Settings - Nur eigene Einstellungen lesbar/schreibbar
    match /userSettings/{settingsId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Expense Areas - Nur eigene Bereiche lesbar/schreibbar
    match /expenseAreas/{areaId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
